<div class="container px-5">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが出ています<br />
  <%= @book.errors.full_messages.each do |m| %>
   <%= m %>
  <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-3">
       <h2>User info</h2>
       <table class="table">
         <tbody>
           <tr>
              <th>name</th>
              <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
         </tbody>
      </table>

      <div class="row">
        <%= link_to "User Edit", edit_user_path(@user.id) %>
      </div>

      <div class="row">
        <h2>New Book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
         <%= f.label :Title %><br />
         <%= f.text_field :title %>
        </div>
        <div class="form-group">
         <%= f.label :Opinion %><br />
         <%= f.text_field :body %>
        </div>
        <div class="form-group">
         <%= f.submit "Create Book" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th>
               <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              </th>
              <th>
                <%= link_to book_path(book.id) do %>
                 <%= book.title %>
                <% end %>
              </th>
              <th>
                <%= book.body %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
