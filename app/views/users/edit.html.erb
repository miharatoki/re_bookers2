<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
      <%= f.label :Name %><br />
      <%= f.text_field :name, autofocaus: true %><br />
      </div>
      <div class="form-group">
      <%= f.label :Image %><br />
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %><br />
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit "update"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
